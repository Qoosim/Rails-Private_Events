<%= form_for(:session, url: login_path) do |f| %>

  <%= f.label :email, class: 'label_html' %>
  <%= f.text_field :email, class: 'form-control' %>

  <%= f.label :password, class: 'label_html' %>
  <%= f.password_field :password, class: 'form-control' %>

  <%= f.submit yield(:button_text), class: 'btn btn-primary form_button' %>

<% end %>
