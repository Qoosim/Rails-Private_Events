<%= form_for(@user) do |f| %>

  <div>
    <% if @user.errors.any? %>
      <ul>
        <% @user.errors.full_messages.each do |err| %>
          <li><%= err %></li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <%= f.label :username, class: 'label_html' %>
  <%= f.text_field :username, class: 'form-control' %>

  <%= f.label :email, class: 'label_html' %>
  <%= f.email_field :email, class: 'form-control' %>

  <%= f.label :password, class: 'label_html' %>
  <%= f.password_field :password, class: 'form-control' %>

  <%= f.label :password_confirmation, 'Confirmation', class: 'label_html' %>
  <%= f.password_field :password_confirmation, class: 'form-control' %>

  <%= f.submit yield(:botton_text), class: "btn btn-primary form_button" %>

<% end %>
